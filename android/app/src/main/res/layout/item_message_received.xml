<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/ivSenderPicture"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--android:background="@drawable/circle" -->


    <TextView
        android:id="@+id/lbMessageSender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="John Doe"
        android:textColor="@color/textColorWhite"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/ivSenderPicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbMessageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_rectangle_orange"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="hi man, how are you?"
        android:textColor="@color/textColorWhite"
        app:layout_constraintLeft_toRightOf="@+id/ivSenderPicture"
        app:layout_constraintTop_toBottomOf="@+id/lbMessageSender" />

    <TextView
        android:id="@+id/lbMessageTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="11:40"
        android:textColor="@color/textColorWhite"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/lbMessageBody"
        app:layout_constraintLeft_toRightOf="@+id/lbMessageBody" />

</android.support.constraint.ConstraintLayout>